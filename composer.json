{
    "name": "sam-it/yii2-urlsigner",
    "description": "Secure URL signing and validation for the Yii2 framework",
    "type": "yii2-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Mousa",
            "email": "sam@mousa.nl"
        }
    ],
    "require": {
        "php": ">= 8.3",
        "yiisoft/yii2": "^2.0.13"
    },
    "autoload": {
        "psr-4": {
            "SamIT\\Yii2\\UrlSigner\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SamIT\\Yii2\\UrlSigner\\Tests\\" : "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "symplify/easy-coding-standard": "^12.5",
        "phpunit/phpunit": "^12.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-with-cc": "vendor/bin/phpunit --coverage-html html/",
        "lint": "vendor/bin/ecs",
        "lint-fix": "vendor/bin/ecs --fix "
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
